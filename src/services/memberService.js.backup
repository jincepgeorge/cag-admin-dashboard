/**
 * Reset member credentials
 */
export const resetMemberCredentials = async (id) => {
  await new Promise(resolve => setTimeout(resolve, 500));
  const member = mockMembers.find(m => m.id === parseInt(id));
  
  if (!member) {
    throw new Error('Member not found');
  }
  
  if (!member.credentials) {
    throw new Error('Member does not have portal access');
  }
  
  const newPassword = generatePassword();
  member.credentials.password = newPassword;
  member.credentials.temporaryPassword = true;
  member.credentials.lastPasswordChange = new Date().toISOString();
  
  // Simulate sending email notification
  console.log('ðŸ“§ Password Reset Email Sent:');
  console.log(`To: ${member.email}`);
  console.log(`Subject: Your Password Has Been Reset`);
  console.log(`Username: ${member.credentials.username}`);
  console.log(`New Temporary Password: ${newPassword}`);
  
  return { member, newPassword };
};

/**
 * Revoke member portal access
 */
export const revokeMemberAccess = async (id) => {
  await new Promise(resolve => setTimeout(resolve, 500));
  const member = mockMembers.find(m => m.id === parseInt(id));
  
  if (!member) {
    throw new Error('Member not found');
  }
  
  member.credentials = null;
  member.hasPortalAccess = false;
  
  return member;
};

