rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload event images
    match /events/{imageId} {
      allow read: if true; // Anyone can read event images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload member images
    match /members/{imageId} {
      allow read: if true; // Anyone can read member images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
